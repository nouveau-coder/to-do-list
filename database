import mysql.connector as ms
con = ms.connect(host = 'localhost',username = 'root',password = '1234')
cur = con.cursor()
cur.execute('create database if not exists todolist')
cur.execute('use todolist')
cur.execute('create table if not exists users(userid int, name varchar(100), password varchar(100))')
cur.execute('create table if not exists tasks(userid int, task varchar(100))')   
con.commit()
